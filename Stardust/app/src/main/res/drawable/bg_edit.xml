<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid
                android:color="#00000000"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners
                android:radius="0dip" />
            <!--设置边框线的粗细和颜色-->
            <stroke
                android:width="1.5px"
                android:color="#FFFFFF"/>
            <!-- padding：里面的文字与边界的间隔 -->
            <padding
                android:left="10dp" />
        </shape>

    </item>
</layer-list>
